@inject UserManager<AppUser> UserManager;



@if (!User.Identity.IsAuthenticated)
{
    <!-- Login Register button-->



    <span style="padding-right:3%;"></span>

    <ul style="margin-top:1%; justify-content:end;width:4%;" class="navbar-nav">

        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
               aria-haspopup="true" aria-expanded="false">
                <b>Log In</b>
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">

                <a style style="border-bottom:1px solid black;" class="dropdown-item" asp-controller="Account" asp-action="Login">
                    <i class="bi bi-person-lock"></i> Log in
                </a>

                <a  class="dropdown-item" asp-controller="Account" asp-action="Register">
                    <i class="bi bi-person-add"></i>Register
                </a>
            </div>
        </li>
       
    </ul>


}

else
{

    <span style="padding-right:7%;"></span>


    <ul style="margin-top:1%; justify-content:end;width:4%;" class="navbar-nav">

        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
               aria-haspopup="true" aria-expanded="false">
                <b><i class="bi bi-person-badge"></i> @UserManager.GetUserName(User)</b>
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                @if (User.IsInRole("Admin"))
                {
                    <a style="border-bottom:1px solid black;" class="dropdown-item" asp-controller="Account" asp-action="Users">
                        <i class="bi bi-people"></i>Manage Users
                    </a>
                }

                <form asp-controller="Account" asp-action="Logout">
                    <button style="height: 85%;font-size:16px;background:none;border:none;color:red;margin-left:12%;">
                        <i class="bi bi-box-arrow-in-right"></i> Log Out
                    </button>
                </form>
            </div>
        </li>

    </ul>

}



