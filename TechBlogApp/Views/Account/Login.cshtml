@using TechBlogApp.Domain.ViewModels;
@model LoginVM;

@{
    ViewData["Title"] = "Log in to your account";


}

<link rel="stylesheet" href="/assets/css/Login_style.css" />
<link href="/assets/css/bootstrap.min.css" rel="stylesheet">
<link href="/assets/css/font-awesome.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
@if (TempData["Error"] != null)
{
    <div class="col-md-12 alert alert-danger">
        <span class="text-danger"><b>Sorry! </b>  - @TempData["Error"]</span>
    </div>
}

<body>
    <form asp-action="Login">


        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <section class="vh-100 gradient-custom">
            <div class="container py-3 h-100">
                <div class="row justify-content-center align-items-center h-100">
                    <div class="col-12 col-lg-9 col-xl-7">
                        <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                            <div class="card-body p-4 p-md-5">
                                <h3 class="mb-4 pb-2 pb-md-0 mb-md-4">Login to Tech Blog</h3>
                                @*  <div class="logo">
                                <img src="/assets/img/user.png">
                                </div> *@
                                <div class="col-md-12 mb-4 pb-2">
                                    <div class="form-group">
                                        <input asp-for=EmailAddress type="email" class="form-control _ge_de_ol" type="text" placeholder="Enter Email">
                                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-12 mb-4 pb-2">
                                    <div class="form-group">
                                        <input asp-for=Password type="password" class="form-control _ge_de_ol" placeholder="Enter Password">
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-12 mb-4 pb-2">
                                    <div class="checkbox form-group">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" value="" id="">
                                            <label class="form-check-label" for="">
                                                Remember me
                                            </label>
                                        </div>
                                        <br />
                                        <a href="#">Forgot Password</a>
                                    </div>
                                </div>

                                <div class="col-md-12 mb-4 pb-2">

                                    <div class="form-group">
                                        <input class="btn btn-primary btn-lg" type="submit" value="Log in" />
                                    </div>
                                </div>

                                <div class="form-group nm_lk">
                                    <a asp-controller="Account" asp-action="Register">Sign up here!</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </form>
</body>